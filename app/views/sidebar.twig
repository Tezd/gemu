<ul id="nav-mobile" class="my-side-nav-fixed collapsible" data-collapsible="accordion">
    <li>
        <div class="collapsible-header waves-effect waves-teal active">
            <i class="mdi-action-settings"></i>
            Settings
        </div>
        <div class="collapsible-body">
            <div class="row">
                <div class="input-field col s12">
                    <select id="gateway" class="gemu_select" name="gateway">
                        <option value="" disabled selected>Choose gateway</option>
                        {% for gateway in gateways %}
                            <option value="{{ gateway }}">{{ gateway }}</option>
                        {% endfor %}
                    </select>
                    <label for="gateway">Gateway</label>
                </div>
                <div class="input-field col s12 myhide">
                    <select id="operator" class="gemu_select" name="operator">
                        <option value="" disabled selected>Choose operator</option>
                    </select>
                    <label for="operator">Operator</label>
                </div>
                <div class="input-field col s12">
                    <input id="campaign-link" name="campaign-link" type="text" data-url-base="true">
                    <label for="campaign-link">Campaign link</label>
                </div>
                <div class="input-field col s8">
                    <input id="msisdn" name="msisdn" type="text">
                    <label for="msisdn">MSISDN</label>
                </div>
                <div class="input-field col s12 flow">
                    <label class="active" for="flow">Flow</label>
                    <div id="flow">
                        <p>
                            <input name="flow" type="radio" checked id="wifi" value="wifi"/>
                            <label for="wifi">Wifi</label>
                        </p>
                        <p>
                            <input name="flow" type="radio" id="3g" value="3g"/>
                            <label for="3g">3G</label>
                        </p>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button class="btn waves-effect waves-light" id="submit" type="submit" name="action">Start
                        <i class="mdi-content-send right"></i>
                    </button>
                </div>
            </div>
        </div>
    </li>
    <li>
        <div class="collapsible-header waves-effect waves-teal">
            <i id='t' class="mdi-communication-chat"></i>
            Logs
        </div>
        <div class="collapsible-body">
            <p>Lorem ipsum dolor sit amet.</p>
        </div>
    </li>
</ul>
